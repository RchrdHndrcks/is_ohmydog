<!-- app/views/contact_posts/edit.html.erb -->
<h2>Editar Contacto</h2>

<%= form_with(model: @contact_post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, class: "form-control narrow-input" %>
  </div>

  <div class="form-group">
    <%= form.label :photo, "Foto" %>
    <%= form.file_field :photo, class: "form-control narrow-input" %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "form-control narrow-input" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, "Número de Teléfono" %>
    <%= form.text_field :phone_number, class: "form-control narrow-input" %>
  </div>

  <div class="form-group">
    <%= form.label :zone, "Zona de Trabajo" %>
    <%= form.text_field :zone, class: "form-control narrow-input" %>
  </div>

  <div class="form-group">
    <%= form.label :availability, "Días y Horarios Libres" %>
    <%= form.text_area :availability, class: "form-control", style: "width: 300px;", rows: 2 %>
  </div>

  <div class="form-group">
  <%= form.label :role, "Trabajo" %>
  <div class="input-group">
    <%= form.select :role, ['Paseador', 'Cuidador'], { prompt: 'Seleccionar' }, class: "form-control ", style: "width: 200px;" %>
    <div class="input-group-append">
      <span class="input-group-text" style="max-width: 30px;"><i class="fas fa-chevron-down"></i></span>
    </div>
  </div>

  <!-- Agrega otros campos según tus necesidades -->

  <%= form.submit 'Actualizar', class: "btn btn-primary" %>
  <%= link_to 'Cancelar', paseadores_cuidadores_path, class: "btn btn-secondary" %>
<% end %>

<style>
.narrow-input {
  width: 200px; /* Ajusta el ancho según tus preferencias */
}

</style>