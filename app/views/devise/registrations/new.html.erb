<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= render_error_messages_for(resource, :name) %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
    <%= render_error_messages_for(resource, :last_name) %>
  </div>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
    <%= render_error_messages_for(resource, :address) %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
    <%= render_error_messages_for(resource, :phone_number) %>
  </div>

  <div class="field">
    <%= f.label :identifier_number %><br>
    <%= f.number_field :identifier_number, autofocus: true, autocomplete: "DNI" %>
    <%= render_error_messages_for(resource, :identifier_number) %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= render_error_messages_for(resource, :email) %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= render_error_messages_for(resource, :password) %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= render_error_messages_for(resource, :password_confirmation) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
