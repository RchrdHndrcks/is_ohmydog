<!-- app/views/users/search.html.erb -->
<%= form_tag users_search_path, method: :get do %>
  <%= text_field_tag :query, params[:query], placeholder: "Buscar usuarios por nombre o email" %>
  <%= submit_tag "Buscar" %>
<% end %>

<% if params[:query].present? %>
  <% if @users.present? %>
    <h2>Resultados de la b√∫squeda:</h2>
    <ul>
      <% @users.each do |user| %>
        <li><%= user.name %> - <%= user.email %></li> <%= link_to "Registrar perro", new_dog_path %> <%= link_to "Ver Perros", dogs_path %>
      <% end %> 
    </ul>
  <% else %>
    <p>No se encontraron usuarios.</p>
  <% end %>
<% end %>