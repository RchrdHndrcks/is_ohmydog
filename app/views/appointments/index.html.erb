<script>


  flatpickr("#calendar", {
    enableTime: true, 
    dateFormat: "Y-m-d H:i",
    minDate: "today",
    
    disable: [
      function(date) {
        // return true to disable
        return (date.getDay() === 0 || date.getDay() === 6);

      }
    ],
    locale: {
      firstDayOfWeek: 1 // start week on Monday
    },
    time_24hr: true,
    // minTime: "08:00",
    // maxTime: "18:00",
  });

</script>
