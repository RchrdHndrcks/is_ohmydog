    font-family: Arial, sans-serif;
    background-color: #ffffff; /* Fondo blanco */
    color: #333; /* Color de texto principal */
  }

  table {
    width: 80%;
    border-collapse: collapse;
      margin: 20px auto; /* Centra horizontalmente */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    

    th, td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #ddd; /* LÃ­nea divisoria */
      vertical-align: middle;
    }

    th {
      position: relative;
      background-color: #2596be;
      margin: 0 auto;
      padding: 20px;
      max-width: 1000px;
      margin-bottom: 35px;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2; /* Fondo de filas pares */
    }

    .highlight1 {
      background-color: #f8934f;
      color: #ffffff;
    }

    .highlight2 {
      background-color: #2596be;
      color: #ffffff;
    }

    .button_date{ 
      background-color: #f8934f;
      text-align: center;
      color: #f8934f;
      padding: 15px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      margin: 5px;
      width: 10%;
      background-image: url('https://cdn-icons-png.flaticon.com/512/55/55281.png');
      background-repeat: no-repeat;
      background-position: center;
      background-size: 30px;
      padding-left: 20px;

    }

    .button_date:hover {
      background-color: #007bff; /* Cambia el color de fondo al pasar el mouse */
      color: #007bff
    }
  

      </style>

        <h1 style="text-align: center;">Turnos en Espera</h1>
        <table>
          <thead>
            <tr>
              <th>Franja Horaria</th>
              <th>Perros</th>
              <% if current_user.es_admin? %>
          <th>Correo</th>
          <th>Elegir Fecha</th>
          <th>Acciones</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @appointments_en_espera.each do |appointment| %>
        <tr>
          <td><%= appointment.timeSlot %></td>
          <td>
            <ul>
              <% appointment.dogs.each do |dog| %>
                <li><%= dog.name %></li>
              <% end %>
            </ul>
          </td>
          <% if current_user.es_admin? %>
            <td><%= User.find(appointment.user_id).email %></td>
            <td>
              <%= form_with(model: appointment, url: update_date_appointment_path(appointment), method: :patch, remote: true) do |f| %>
                <%= f.date_field :appointment_date, class: "button_date", id: "calendar" %>
            </td>
            <td>
            <%= f.submit "Confirm", class: "button", id: "confirmButton", onclick: "return confirm('Confirmar fecha?')" %>
            <% end %>
              <%= form_with(model: appointment, url: update_state_appointment_path(appointment), method: :patch, remote: true) do |f| %>
                <%= f.hidden_field :state, value: "rejected" %>
                <%= f.submit "Reject", class: "button", id: "rejectButton", onclick: "return confirm('Seguro que deseas rechazar el turno?')" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1 style="text-align: center;">Proximos turnos</h1>
  <table>
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Perros</th>
        <% if current_user.es_admin? %>
          <th>Correo</th>
          <th>Editar</th>
        <% end %>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments_aceptados.each do |appointment| %>
        <tr>
          <td><%= appointment.appointment_date %></td>
          <td>
            <ul>
              <% appointment.dogs.each do |dog| %>
                <li><%= dog.name %></li>
              <% end %>
            </ul>
          </td>
          <% if current_user.es_admin? %>
            <td><%= User.find(appointment.user_id).email %></td>
            
          <td>
            <%= form_with(model: appointment, url: update_date_appointment_path(appointment), method: :patch, remote: true) do |f| %>
              <%= f.date_field :appointment_date, class: "button_date", id: "calendar" %>
          </td>
          <td>
              <%= f.submit "Confirm", class: "button", id: "confirmButton", onclick: "return confirm('Confirmar edicion?')" %>
            <% end %>
          <% else %>
              <td>
          <% end %>
            <%= form_with(model: appointment, url: update_state_appointment_path(appointment), method: :patch, remote: true) do |f| %>
              <%= f.hidden_field :state, value: "cancelado" %>
              <%= f.submit "Cancelar", class: "button", id: "cancelar-btn", onclick: "return confirm('Seguro que deseas cancelar el turno?')" %>
            <% end %>
          </td> 
         
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1 style="text-align: center;">Turnos Rechazados</h1>
  <table>
    <thead>
      <tr>
        <th>Perros</th> 
        <th>Franja</th>
        <% if current_user.es_admin? %>
        <th>Correo</th>
      <% end %>
