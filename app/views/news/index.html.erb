<% @news.each_with_index do |new, index| %>
    <div class="news-item <%= index.even? ? 'even' : 'odd' %>">
      <h2><%= new.title %></h2>
      <p><%= new.description %></p>
      <% if new.image.attached? %>
        <%= image_tag new.image %>
      <% end %>
      <% if user_signed_in? && current_user.es_admin %>
        <div class="admin-buttons">
          <button class="edit-btn" onclick="">Editar</button>
          <button class="delete-btn" onclick="">Eliminar</button>
        </div>
      <% end %>
    </div>
  <% end %>
  
