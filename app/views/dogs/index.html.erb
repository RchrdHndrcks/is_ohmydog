<!-- app/views/dogs/index.html.erb -->
<h1>Perros de <%= @user.name %></h1>

<% if @dogs.present? %>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Raza</th>
        <th>Fecha de Nacimiento</th>
        <th>Foto</th>
      </tr>
    </thead>
    <tbody>
      <% @dogs.each do |dog| %>
        <tr>
          <td><%= dog.name %></td>
          <td><%= dog.breed %></td>
          <td><%= dog.birthdate %></td>
          <% if dog.image.attached? %>
            <td><%= image_tag dog.image, size: "100x100" %></td>
          <% else %>
            <td><%= image_tag "https://w7.pngwing.com/pngs/163/438/png-transparent-paw-dog-footprints-miscellaneous-animals-pet.png", size: "100x100" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No se encontraron perros para <%= @user.name %>.</p>
<% end %>
<% if (current_user.es_admin?) %>
  <%= link_to "Volver a la lista de usuarios", users_search_path %>
<% end %>
